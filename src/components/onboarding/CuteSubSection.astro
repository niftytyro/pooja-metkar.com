---
import CuteUnderline from "../../illustrations/cute-underline.svg";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div>
  <div class="cute-heading-title inline-flex flex-col items-stretch space-y-1">
    <span>
      {title}
    </span>
    <img src={CuteUnderline.src} class="w[120%]" />
  </div>

  <slot />
</div>

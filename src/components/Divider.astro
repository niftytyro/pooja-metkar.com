---
interface Props {
  variant?: "looksRed" | "black";
  enforceFullWidth?: boolean;
}

const { variant = "black", enforceFullWidth = false } = Astro.props;
---

{
  enforceFullWidth ? (
    <div class="relative h-[1px]"/>
		
		<div
			class={`absolute left-0 w-screen mx-auto h-[0.6px] ${variant === "black" ? "bg-black20" : "bg-looksRed40"}`}
		/>
  ) : (
    <div
      class={` w-full h-[1px] ${variant === "black" ? "bg-black20" : "bg-looksRed40"}`}
    />
  )
}
